<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Main.Menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/criarMapa"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Criar Mapa"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/editarMapa"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Editar Mapa"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/criarMapa"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/exportarMapa"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Exportar Mapa"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editarMapa"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/sobre"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Sobre"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/importarMapa"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/voltar"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/importarMapa"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#5097E3"
            android:fontFamily="@font/carter_one"
            android:text="Importar Mapa"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exportarMapa"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#e38850"
            app:strokeWidth="3dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>