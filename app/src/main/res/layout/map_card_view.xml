<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewMaps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <Button
            android:id="@+id/buttonEliminarMapCard"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:backgroundTint="#DD0A0A"
            android:translationY="-2dp"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconPadding="0dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonSelectMapCard"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/btn_default"
            android:elevation="0dp"
            android:shadowRadius="0"
            android:stateListAnimator="@null"
            android:visibility="visible"
            tools:visibility="visible" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textViewNomeMapaCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="#00FFFFFF"
        android:text="NomeMapa"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewNumeroPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:background="#00FFFFFF"
        android:text="TextNumeroPontos"
        android:textColor="#FFFFFF"
        android:translationY="-2dp" />

</androidx.cardview.widget.CardView>